t]
Description= Chain binary service
After=network-online.target
[Service]
Environment='DAEMON_NAME={{ chain_binary_name}}'
Environment='DAEMON_HOME={{chain_home}}'
Environment='DAEMON_ALLOW_DOWNLOAD_BINARIES=true'
Environment='DAEMON_RESTART_AFTER_UPGRADE=true'
Environment='DAEMON_LOG_BUFFER_SIZE=512'
User={{node_user}}
ExecStart={{chain_bin}} start --home {{chain_home}}
StandardOutput=append:/var/log/{{ chain_binary_name }}.log
StandardError=append:/var/log/{{ chain_binary_name }}.log
Restart=always
RestartSec=3
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target
